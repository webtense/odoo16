<odoo>
    <record id="view_form_inspeccion" model="ir.ui.view">
        <field name="name">inspeccion.form</field>
        <field name="model">btr.inspeccion</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="fecha_inspeccion"/>
                        <field name="estado"/>
                        <field name="entidad_id"/>
                        <field name="tipo_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_inspeccion" model="ir.ui.view">
        <field name="name">inspeccion.tree</field>
        <field name="model">btr.inspeccion</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="fecha_inspeccion"/>
                <field name="estado"/>
            </tree>
        </field>
    </record>
</odoo>
