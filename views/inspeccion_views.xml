<odoo>
    <record id="view_form_inspeccion" model="ir.ui.view">
        <field name="name">inspeccion.form</field>
        <field name="model">btr.inspeccion</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="fecha_inspeccion"/>
                        <field name="estado"/>
                        <field name="entidad_id"/>
                        <field name="tipo_id"/>
                    </group>
                    <group string="Gestión del Archivo">
                        <field name="file_attachment" filename="file_name" string="Subir Documento"/>
                        <field name="file_name" readonly="1"/>
                        <button string="Guardar Documento" type="object" name="action_save_attachment" class="oe_highlight"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
