<odoo>
    <!-- Vista de formulario para inspecciones -->
    <record id="view_form_inspeccion" model="ir.ui.view">
        <field name="name">inspeccion.form</field>
        <field name="model">btr.inspeccion</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="fecha_inspeccion"/>
                        <field name="estado"/>
                        <field name="entidad_id"/>
                        <field name="tipo_id"/>
                    </group>
                    <group string="Gestión del Archivo">
                        <field name="file_attachment" filename="file_name" string="Subir Documento"/>
                        <field name="file_name" readonly="1"/>
                        <button string="Guardar Documento" type="object" name="action_save_attachment" class="oe_highlight"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de lista para inspecciones -->
    <record id="view_tree_inspeccion" model="ir.ui.view">
        <field name="name">inspeccion.tree</field>
        <field name="model">btr.inspeccion</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="fecha_inspeccion"/>
                <field name="estado"/>
                <field name="tipo_id"/>
            </tree>
        </field>
    </record>

    <!-- Acción para listar inspecciones -->
    <record id="action_btr_inspecciones" model="ir.actions.act_window">
        <field name="name">Inspecciones</field>
        <field name="res_model">btr.inspeccion</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Aquí puedes gestionar todas las inspecciones registradas.
                Selecciona una inspección para más detalles o agrega una nueva.
            </p>
        </field>
    </record>
</odoo>
