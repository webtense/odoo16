<odoo>
    <!-- Acción para listar inspecciones -->
    <record id="action_btr_inspecciones" model="ir.actions.act_window">
        <field name="name">Inspecciones</field>
        <field name="res_model">btr.inspeccion</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <!-- Acción para entidades inspectoras -->
    <record id="action_btr_entidades" model="ir.actions.act_window">
        <field name="name">Entidades Inspectoras</field>
        <field name="res_model">btr.entidad.inspectora</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Acción para tipos de inspección -->
    <record id="action_btr_tipos" model="ir.actions.act_window">
        <field name="name">Tipos de Inspección</field>
        <field name="res_model">btr.tipo.inspeccion</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
