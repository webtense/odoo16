<odoo>
    <!-- Vista Tree -->
    <record id="view_inspection_type_tree" model="ir.ui.view">
        <field name="name">inspection.type.tree</field>
        <field name="model">inspection.type</field>
        <field name="arch" type="xml">
            <tree string="Tipos de Inspección">
                <field name="name"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form -->
    <record id="view_inspection_type_form" model="ir.ui.view">
        <field name="name">inspection.type.form</field>
        <field name="model">inspection.type</field>
        <field name="arch" type="xml">
            <form string="Tipo de Inspección">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para Tipos de Inspección -->
    <record id="action_inspection_type" model="ir.actions.act_window">
        <field name="name">Tipos de Inspección</field>
        <field name="res_model">inspection.type</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_inspection_type_tree"/> <!-- Enlace explícito a la vista tree -->
    </record>
</odoo>
