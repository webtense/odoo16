<odoo>
    <!-- Acción para listar entidades inspectoras -->
    <record id="action_btr_entidades" model="ir.actions.act_window">
        <field name="name">Entidades Inspectoras</field>
        <field name="res_model">btr.entidad.inspectora</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Aquí puedes gestionar todas las entidades inspectoras registradas.
                Selecciona una entidad para más detalles o agrega una nueva.
            </p>
        </field>
    </record>
</odoo>
