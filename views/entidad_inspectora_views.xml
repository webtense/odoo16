<odoo>
    <record id="view_tree_entidad_inspectora" model="ir.ui.view">
        <field name="name">entidad.inspectora.tree</field>
        <field name="model">btr.entidad.inspectora</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="contacto"/>
                <field name="correo"/>
                <field name="telefono"/>
            </tree>
        </field>
    </record>

    <record id="view_form_entidad_inspectora" model="ir.ui.view">
        <field name="name">entidad.inspectora.form</field>
        <field name="model">btr.entidad.inspectora</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="contacto"/>
                        <field name="correo"/>
                        <field name="telefono"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_btr_entidades" model="ir.actions.act_window">
        <field name="name">Entidades Inspectoras</field>
        <field name="res_model">btr.entidad.inspectora</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
