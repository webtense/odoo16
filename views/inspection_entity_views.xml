<!-- inspection_entity_views.xml -->
<odoo>
    <!-- Vista Tree -->
    <record id="view_inspection_entity_tree" model="ir.ui.view">
        <field name="name">inspection.entity.tree</field>
        <field name="model">inspection.entity</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="contact_info"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form -->
    <record id="view_inspection_entity_form" model="ir.ui.view">
        <field name="name">inspection.entity.form</field>
        <field name="model">inspection.entity</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="contact_name"/>
                        <field name="contact_email"/>
                        <field name="contact_phone"/>
                        <field name="contact_info" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n para Entidades Inspectoras -->
    <record id="action_inspection_entity" model="ir.actions.act_window">
        <field name="name">Entidades Inspectoras</field>
        <field name="res_model">inspection.entity</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
